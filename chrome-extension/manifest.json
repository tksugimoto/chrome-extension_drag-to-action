{
	"name": "テキストを選択→ドラッグで検索",
	"version": "0.1",
	"manifest_version": 3,

	"description": "",

	"icons": {
		"128": "/icon/icon.png"
	},
	"host_permissions": [
		"file:///*",
		"*://*/*"
	],
	"permissions": [
		"scripting",
		"notifications"
	],

	"background": {
		"service_worker": "textDrag2Action.js"
	},

	"content_scripts": [
		{
			"matches": [
				"file:///*",
				"*://*/*"
			],
			"js": [
				"textDrag2Action.js"
			],
			"css": [
				"textDrag2Action.css"
			],
			"run_at": "document_start",
			"all_frames": true
		}
	]
}
