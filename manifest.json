{
	"name": "テキストを選択→ドラッグで検索",
	"version": "0.1",
	"manifest_version": 2,

	"description": "",

	"icons": {
		"128": "icon/icon.png"
	},
	"permissions": [
		"*://*/*",
		"tabs"
	],

	"background": {
		"scripts": [
			"textDrag2Action.js"
		]
	},

	"content_scripts": [
		{
			"matches": [
				"*://*/*"
			],
			"js": [
				"textDrag2Action.js"
			],
			"css": [
				"textDrag2Action.css"
			],
			"run_at": "document_start",
			"all_frames": true
		}
	]
}